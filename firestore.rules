
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // The admin user has full read/write access to all collections.
    match /{document=**} {
      allow read, write: if request.auth.uid == 'jy39QM0BtDROwlkLPZvFFV4H8mk2';
    }

    // Default-deny all other users until more specific rules are added.
    // This is a secure starting point.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

    