
{
  "entities": {
    "enquiry": {
      "title": "Enquiry",
      "description": "A user enquiry for a free consultation.",
      "type": "object",
      "properties": {
        "schoolName": {
          "type": "string",
          "description": "The name of the school."
        },
        "contactName": {
          "type": "string",
          "description": "The name of the contact person."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email address of the contact person."
        },
        "phone": {
          "type": "string",
          "description": "The phone number of the contact person."
        },
        "userId": {
          "type": "string",
          "description": "The UID of the user who submitted the enquiry."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the enquiry was created."
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Contacted",
            "Resolved"
          ],
          "description": "The status of the enquiry."
        }
      },
      "required": [
        "schoolName",
        "contactName",
        "email",
        "phone",
        "userId",
        "createdAt",
        "status"
      ]
    },
    "workshop": {
      "title": "Workshop",
      "description": "An educational workshop event.",
      "type": "object",
      "properties": {
        "title": { "type": "string", "description": "The title of the workshop." },
        "description": { "type": "string", "description": "A detailed description of the workshop." },
        "instructor": { "type": "string", "description": "The name of the workshop instructor." },
        "date": { "type": "string", "description": "The date(s) of the workshop." },
        "duration": { "type": "string", "description": "The duration of the workshop." },
        "imageUrl": { "type": "string", "description": "URL for the workshop's cover image." },
        "venue": { "type": "string", "description": "The venue where the workshop will be held." },
        "address": { "type": "string", "description": "The address of the venue." },
        "time": { "type": "string", "description": "The start and end time of the workshop." },
        "topics": { "type": "string", "description": "A comma-separated list of topics to be covered." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "description", "instructor", "date", "duration", "venue", "address", "time", "topics", "createdAt"]
    },
    "workshopRegistration": {
      "title": "Workshop Registration",
      "description": "A user's registration for a specific workshop.",
      "type": "object",
      "properties": {
        "workshopId": { "type": "string" },
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "userEmail": { "type": "string", "format": "email" },
        "registeredAt": { "type": "string", "format": "date-time" }
      },
      "required": ["workshopId", "userId", "userName", "userEmail", "registeredAt"]
    },
    "product": {
      "title": "Product",
      "description": "A product available for purchase in the shop.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "The name of the product." },
        "description": { "type": "string", "description": "A detailed description of the product." },
        "price": { "type": "number", "description": "The price of the product." },
        "discountPercentage": { "type": "number", "description": "The discount percentage to apply." },
        "imageUrls": { "type": "array", "items": { "type": "string", "format": "uri" }, "description": "An array of URLs for the product images." },
        "features": { "type": "array", "items": { "type": "string" }, "description": "A list of product features." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "description", "price", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/enquiries/{enquiryId}": {
      "schema": {
        "$ref": "#/entities/enquiry"
      },
      "description": "Stores user enquiries for free consultations."
    },
    "/workshops/{workshopId}": {
      "schema": {
        "$ref": "#/entities/workshop"
      },
      "description": "Stores all available workshops."
    },
    "/workshops/{workshopId}/registrations/{registrationId}": {
      "schema": {
        "$ref": "#/entities/workshopRegistration"
      },
      "description": "Stores user registrations for a specific workshop."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/product"
      },
      "description": "Stores all available products for the shop."
    }
  }
}
