
{
  "entities": {
    "enquiry": {
      "title": "Enquiry",
      "description": "A user enquiry for a free consultation.",
      "type": "object",
      "properties": {
        "schoolName": {
          "type": "string",
          "description": "The name of the school."
        },
        "contactName": {
          "type": "string",
          "description": "The name of the contact person."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email address of the contact person."
        },
        "phone": {
          "type": "string",
          "description": "The phone number of the contact person."
        },
        "userId": {
          "type": "string",
          "description": "The UID of the user who submitted the enquiry."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the enquiry was created."
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Contacted",
            "Resolved"
          ],
          "description": "The status of the enquiry."
        }
      },
      "required": [
        "schoolName",
        "contactName",
        "email",
        "phone",
        "userId",
        "createdAt",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/enquiries/{enquiryId}": {
      "schema": {
        "$ref": "#/entities/enquiry"
      },
      "description": "Stores user enquiries for free consultations."
    }
  }
}
